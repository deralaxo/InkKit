{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["dom", "es2018", "ES2020"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "declaration": true,
    "module": "Node16",
    "outDir": "dist",
    "strictNullChecks": true,
    "moduleResolution": "Node16",
    "moduleDetection": "force",
    "allowJs": false,

    "stripInternal": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.spec.tsx", "dist", "docs"]
}
