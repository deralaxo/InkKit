{
  "compilerOptions": {
    "outDir": "dist",

    "target": "es2022",
    "module": "Node16",
    "lib": ["dom", "es2017", "es2019"],
    "declaration": true,
    "declarationMap": true,
    // "importHelpers": true,
    // "isolatedModules": true,

    "jsx": "react",

    "strict": true,
    "strictNullChecks": true,

    /* Additional Checks */
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    /* Module Resolution Options */
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["**/tests/**/*", "**/dist/**/*", "**/examples/**/*", "node_modules", "demo"]
}
